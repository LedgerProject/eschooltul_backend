<div class="shadow-md px-2 mb-3 sm:flex items-stretch border border-gray-100"> 
  
  <div class="border-b border-gray-100 py-1 sm:w-1/4 sm:border-b-0 sm:px-1 flex items-baseline">
    <p class="text-lg font-semibold tracking-tight mr-1"><%= course.name %></p>
    <p class="text-sm text-gray-500 capitalize"><%= course.subject %></p>
  </div>

  
    <div class="flex items-center justify-between sm:w-1/4 sm:flex-col xl:flex-row xl:justify-center py-1">
      <p class="text-sm xl:mr-2">
        <%= course.students.count %>
        <%= icon("fas", "user", class: "ml-1 text-blue-500") %>
      </p>
      <%= render partial: "secondary_button", locals: {
          url: grades_course_path(course),
          button_style: "btn-sm text-blue-900 bg-blue-50 hover:bg-blue-100",
          icon: ["fas", "marker"],
          icon_style: "",
          text: t('course.grades'),
        }
      %>
    </div>

    <div class="flex items-center justify-between sm:w-1/4 sm:flex-col xl:flex-row xl:justify-center py-1">
      <p class="text-sm xl:mr-2">
        <%= course.terms.count %>
        <%= icon("fas", "calendar-alt", class: "ml-1 text-purple-500") %>
      </p>
      <%= render partial: "secondary_button", locals: {
          url: grades_course_terms_path(course),
          button_style: "btn-sm text-purple-900 bg-purple-50 hover:bg-purple-100",
          icon: ["fas", "calendar-alt"],
          icon_style: "",
          text: t('course.terms'),
        }
      %>
    </div>

    <div class="flex items-center justify-between sm:w-1/4 sm:flex-col xl:flex-row xl:justify-center py-1">
      <p class="text-sm xl:mr-2">
        <%= course.lessons.count %>
        <%= icon("fas", "book", class: "ml-1 text-green-500") %>
      </p>
      <%= render partial: "secondary_button", locals: {
          url: grades_course_lessons_path(course),
          button_style: "btn-sm text-green-900 bg-green-50 hover:bg-green-100",
          icon: ["fas", "book"],
          icon_style: "",
          text: t('course.lessons'),
        }
      %>
    </div>
</div>
