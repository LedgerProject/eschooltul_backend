<%= render partial: "grades/terms/term_breadcrumbs" %>
<h1 class="text-2xl md:text-5xl font-bold tracking-tighter"><%= t("term.terms")%></h1>
<p class="text-gray-400 tracking-widest"><%= t("term.manage")%></p>
<% if @terms.empty?%>
  <div class="p-4 mt-20 2xl:p-8 w-full flex justify-center items-center">
    <div class="w-full">
      <%= image_tag("desk.svg", class: "w-1/2 max-w-xs mx-auto mb-4 sm:mb-8" ) %>
      <div class="text-center">
        <p class="text-sm mx-auto text-gray-400 mb-2 sm:mb-4 md:text-base">
        <%= t("term.noterm")%>
        </p>
        <%= render partial: "primary_button", locals: {
            url: new_grades_course_term_path(@course),
            button_style: "bg-blue-500 hover:bg-blue-900 text-white btn",
            icon: ["fas", "plus"],
            icon_style: "",
            text: t("term.createterm")
          }
        %>
      </div>
    </div>
  </div>
<% else %>
  <div class="pt-4 lg:pt-2 lg:p-2 xl:p-4 2xl:p-8 w-full">
    <%= render partial: "grades/terms/terms_table" %>
  </div>
  <div class="pt-4 lg:pt-2 lg:p-2 xl:p-4 2xl:p-8 w-full flex flex-col-reverse items-center xs:flex-row xs:justify-between xs:items-center">
    <div class="mt-4 xs:mt-0">
      <%= render partial: "secondary_button", locals: {
          url: grades_course_lessons_path(@course),
          button_style: "bg-green-50 hover:bg-green-100 text-green-900 btn",
          icon: ["fas", "book"],
          icon_style: "",
          text: t("lesson.lessons")
        }
      %>
    </div>
    <div>
      <%= render partial: "primary_button", locals: {
          url: new_grades_course_term_path(@course),
          button_style: "bg-blue-500 hover:bg-blue-900 text-white btn",
          icon: ["fas", "plus"],
          icon_style: "",
          text: t("term.createterm")
        }
      %>
    </div>
  </div>
<% end %>

