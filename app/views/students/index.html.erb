<h1 class="text-2xl md:text-5xl font-bold tracking-tighter"><%= t("edrecord.edrecord")%></h1>
<p class="text-gray-400 tracking-widest"><%= t("edrecord.manageed")%></p>
<% if @students.empty? %>
  <div class="p-4 mt-20 2xl:p-8 w-full flex justify-center items-center">
    <div class="w-full">
      <%= image_tag("students.svg", class: "w-1/2 max-w-xs mx-auto mb-4 sm:mb-8" ) %>
      <div class="text-center">
        <% unless current_user.teacher? %>
          <p class="text-sm mx-auto text-gray-400 mb-2 sm:mb-4 md:text-base">
            <%= t("edrecord.firstrecord") %>
          </p>
          <%= render partial: "primary_button", locals: {
              url: new_student_path,
              button_style: "bg-blue-500 hover:bg-blue-900 text-white btn",
              icon: ["fas", "plus"],
              icon_style: "",
              text: t("edrecord.addrecord")
            }
          %>
        <% else %>
          <p class="text-sm mx-auto text-gray-400 mb-2 sm:mb-4 md:text-base">
          <%= t("student.askdirector")%>
          </p>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="pt-4 lg:pt-2 lg:p-2 xl:p-4 2xl:p-8 w-full">
    <%= render partial: "students/students_table" %>
  </div>
  <% unless current_user.teacher? %>
    <div class="pt-4 lg:pt-2 lg:p-2 xl:p-4 2xl:p-8 w-full md:text-right">
      <%= render partial: "primary_button", locals: {
          url: new_student_path,
          button_style: "bg-blue-500 hover:bg-blue-900 text-white btn",
          icon: ["fas", "plus"],
          icon_style: "",
          text: t("edrecord.addrecord")
        }
      %>
      <%= render partial: "primary_button", locals: {
          url: new_import_ed_record_path,
          button_style: "bg-blue-500 hover:bg-blue-900 text-white btn",
          icon: ["fas", "arrow-up"],
          icon_style: "",
          text: t("edrecord.importrecord")
        }
      %>
    </div>
  <% end %>
<% end %>
   
