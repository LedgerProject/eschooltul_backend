<h1 class="text-2xl md:text-5xl font-bold tracking-tighter">My school</h1>
<p class="text-gray-400 tracking-widest">This is your main personal view</p>
<div class="lg:p-2 xl:p-4 2xl:p-8 flex flex-col md:flex-row pt-4 lg:pt-2">
  <div class="md:w-1/2 mb-4">
    <!-- TODO: Class information -->
    <p class="text-xl">Hello <%= current_user.complete_name %></p>
  </div>
  <div class="w-full md:w-1/2 max-w-screen-xs md:max-w-none mb-4 mx-auto md:mx-0">
    <p class="text-xl text-center mb-16"><%= Time.now.strftime("Today is %B, %e of %Y") %></p>
    <div class="mb-8">
      <% if @school.logo.attached? %>
        <%= image_tag(@school.logo, class: "mx-auto") %>
      <% else %>
        <%= image_tag("school-logo.png", class: "mx-auto") %>
      <% end %>
    </div>
    <h2 class="text-xl font-bold tracking-tighter mb-6 text-center"><%= @school.name %></h2>
    <p class="text-gray-400"><%= blank_or_nil(@school.address, "Address") %></p>
    <p class="text-gray-400"><%= blank_or_nil(@school.city, "City") %></p>
    <p class="text-gray-400 truncate"><%= blank_or_nil(@school.email, "Contact email") %></p>
    <% if current_user.director? %>
      <div class="mt-4 text-right">
        <%= render partial: "secondary_button", locals: {
            url: settings_path,
            button_style: "btn-sm bg-blue-50 text-blue-900 hover:bg-blue-100",
            icon: ["fas", "arrow-right"],
            icon_style: "bg-blue-200",
            text: "Edit school information"
          }
        %>
      </div>
    <% end %>
    </div>
</div>
