<% if resource.errors.any? %>
  <div class="bg-red-50 border-l-4 border-red-900 p-1 absolute top-24 w-full">
    <ul class="text-xs text-red-900 p-2">
      <% resource.errors.full_messages.each do |message| %>
        <li class="mb-1"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
