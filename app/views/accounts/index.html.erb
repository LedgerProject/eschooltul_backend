<h1 class="text-2xl md:text-5xl font-bold tracking-tighter"><%= t(:accounts)%></h1>
<p class="text-gray-400 tracking-widest"><%= t(:manageaccount)%></p>
<div class="pt-4 lg:pt-2 lg:p-2 xl:p-4 2xl:p-8 w-full">
  <div class="flex sm:justify-end">
    <%= render partial: "search_input", 
      locals: {
        placeholder: t(:nameormail),
        url: accounts_path, 
        search: @search, 
        field: :name_or_email_cont
      }
    %>
  </div>
  <%= render partial: "accounts/accounts_table" %>
</div>
<div class="pt-4 lg:pt-2 lg:p-2 xl:p-4 2xl:p-8 w-full md:text-right">
  <%= render partial: "primary_button", locals: {
      url: new_account_path,
      button_style: "bg-blue-500 hover:bg-blue-900 text-white btn",
      icon: ["fas", "plus"],
      icon_style: "",
      text: t(:createaccount)
    }
  %>
</div>
