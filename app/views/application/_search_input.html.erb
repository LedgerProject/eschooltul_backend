<%= search_form_for search, url: url, class: "flex" do |f| %>
  <div class="flex flex-col xs:flex-row xs:items-center">
    <%= f.label field, t(:search), class: "text-xs text-blue-500 mr-3 mb-2 xs:mb-0" %>
    <%= f.search_field field,
                      class: "px-4 py2 border border-blue-500 rounded-md text-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 placeholder-blue-300",
                      placeholder: placeholder
    %>
  </div>
<% end %>
