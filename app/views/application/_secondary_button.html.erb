<%= link_to(
  url, 
  class: "btn-secondary #{button_style}", 
  method: local_assigns.has_key?(:method) ? method : nil, 
  data: local_assigns.has_key?(:data) ? data : nil) do %>
    <%= text %>
    <% if local_assigns.has_key? :icon %>
      <%= content_tag('span', class: "icon #{icon_style}") do  %>
        <%= icon(icon[0], icon[1]) %>
      <% end %>
    <% end %>
<% end %>
