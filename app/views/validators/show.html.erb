<%= render "layouts/flash" %>
<div class="wrap py-2 text-right">
  <%= render partial: "secondary_button", locals: {
      url: new_validator_path,
      button_style: "bg-blue-500 hover:bg-blue-900 text-white btn",
      icon: ["fas", "undo-alt"],
      icon_style: "",
      text: t("back")
    }
  %>
</div>
<div class="flex flex-1 flex-col items-center justify-center">
  <div class="border border-blue-900 max-w-2xl w-9/10 md:shadow-lg">
    <div class="md:flex">
      <div class="bg-blue-900 p-2 md:w-2/5">
        <p class="text-white"><%= t("validator.action.date") %></p>
      </div>
      <div class="bg-blue-50 p-2 md:w-3/5">
        <p class="text-blue-900 text-right"><%= @report.date %></p>
      </div>
    </div>
    <div class="md:flex">
      <div class="bg-blue-900 p-2 md:w-2/5 border-t border-blue-50">
        <p class="text-white"><%= t("validator.action.data") %></p>
      </div>
      <div class="bg-blue-50 p-2 md:w-3/5 border-t border-blue-900">
        <p class="text-blue-900 break-all"><%= @data %></p>
      </div>
    </div>
    <div class="md:flex">
      <div class="bg-blue-900 p-2 md:w-2/5 border-t border-blue-50">
        <p class="text-white"><%= t("validator.action.block_num") %></p>
      </div>
      <div class="bg-blue-50 p-2 md:w-3/5 border-t border-blue-900">
        <p class="text-blue-900 break-all"><%= @batch_data.dig("data", "header", "block_num") %></p>
      </div>
    </div>
    <div class="md:flex">
      <div class="bg-blue-900 p-2 md:w-2/5 border-t border-blue-50">
        <p class="text-white"><%= t("validator.action.signer_public_key") %></p>
      </div>
      <div class="bg-blue-50 p-2 md:w-3/5 border-t border-blue-900">
        <p class="text-blue-900 break-all"><%= @batch_data.dig("data", "batches", 0, "header", "signer_public_key") %></p>
      </div>
    </div>
    <div class="md:flex">
      <div class="bg-blue-900 p-2 md:w-2/5 border-t border-blue-50">
        <p class="text-white"><%= t("validator.action.header_signature") %></p>
      </div>
      <div class="bg-blue-50 p-2 md:w-3/5 border-t border-blue-900">
        <p class="text-blue-900 break-all"><%= @batch_data.dig("data", "header_signature") %></p>
      </div>
    </div>
    <div class="border-t border-blue-900 md:flex md:justify-end md:items-stretch">
      <div class="bg-blue-900 p-2 md:w-2/5 border-t border-blue-50 hidden md:block"></div>
      <div class="bg-blue-50 p-2 md:w-3/5">
        <%= link_to t("validator.action.link"), @batch_data.dig("link"), class:"text-blue-900 break-all" %>
      </div>
    </div>
  </div>
</div>
