<div class="shadow-md px-2 mb-3 sm:flex items-stretch border border-gray-100"> 
  <div class="border-b border-gray-100 py-1 sm:w-1/2 sm:border-b-0 sm:px-1 md:flex md:flex-col md:justify-center">
    <p class="text-lg font-semibold tracking-tight"><%= course.name %></p>
    <p class="text-sm text-gray-500 capitalize"><%= course.subject %></p>
  </div>
  <div class="py-1 sm:w-1/2 sm:px-1 md:flex items-center justify-between">
    <p class="text-sm mb-2 md:mb-0"><%= course.user.complete_name %></p>
    <div class="text-right">
      <%= render partial: "icon_button", locals: {
          url: edit_course_path(course),
          style: "btn-sm text-blue-500",
          icon: ["far", "edit"],
        }
      %>
      <%= render partial: "icon_button", locals: {
          url: duplicate_course_path(course),
          style: "btn-sm text-green-500",
          method: :post,
          icon: ["far", "clone"],
        }
      %>
      <%= render partial: "icon_button", locals: {
          url: course_path(course),
          style: "btn-sm text-red-500",
          method: :delete,
          icon: ["far", "trash-alt"],
          data: {
            confirm: "Are you sure you want to delete this course?",
          }
        }
      %>
    </div>
  </div>
</div>
